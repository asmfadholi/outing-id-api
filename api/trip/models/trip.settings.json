{
  "kind": "collectionType",
  "collectionName": "trips",
  "info": {
    "name": "Trip"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "type": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "route": {
      "type": "string",
      "required": true
    },
    "maxQuota": {
      "type": "integer",
      "required": true
    },
    "duration": {
      "type": "integer",
      "required": true
    },
    "minAge": {
      "type": "integer",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "price": {
      "type": "biginteger",
      "required": true
    },
    "banner": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true
    },
    "level": {
      "type": "string",
      "required": true
    },
    "packages": {
      "type": "component",
      "repeatable": true,
      "component": "trip.package"
    },
    "availability": {
      "type": "component",
      "repeatable": false,
      "component": "trip.availibility"
    },
    "iteneraries": {
      "type": "component",
      "repeatable": true,
      "component": "trip.itenerary"
    },
    "accomodations": {
      "type": "component",
      "repeatable": true,
      "component": "trip.accomodation"
    },
    "transportations": {
      "type": "component",
      "repeatable": true,
      "component": "trip.accomodation"
    }
  }
}
